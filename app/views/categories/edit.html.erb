<% form_for :category, @category, :url => category_path, :html => { :multipart => true, :method => :put } do |f| %>
  
  <%= f.error_messages %>
  
  <p>Путь к фото<br/>
  	<%= f.file_field :photo %>
  </p> 
  
  <p>Укажите категорию<br/>
  	<%= f.text_field(:name) %>
  </p>
  
  <p>
    <%= f.submit "Обновить" %>
  </p>
<% end %>

<%= link_to 'Назад', categories_path %>
